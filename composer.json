{
    "name": "deshithemes/css-cleaner",
    "description": "🚀 Laravel package to purge and minify CSS files with zero config. Removes unused CSS, minifies styles, and boosts performance. Built with ❤️ by DeshiThemes.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "css",
        "optimizer",
        "purgecss",
        "minify",
        "performance",
        "tailwind",
        "bootstrap",
        "optimization",
        "frontend"
    ],
    "authors": [
        {
            "name": "Ruman (DeshiThemes)",
            "email": "roman.civil2019@gmail.com",
            "homepage": "https://github.com/DeshiThemes",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0 || ^11.0",
        "symfony/process": "^6.0 || ^7.0",
        "ext-json": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"
    },
    "bin": [
        "bin/css-cleaner"
    ],
    "autoload": {
        "psr-4": {
            "DeshiThemes\\CssCleaner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DeshiThemes\\CssCleaner\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DeshiThemes\\CssCleaner\\CssCleanerServiceProvider"
            ],
            "aliases": {
                "CssCleaner": "DeshiThemes\\CssCleaner\\Facades\\CssCleaner"
            },
            "branch-alias": {
                "dev-main": "1.0.x-dev"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=css-cleaner-config --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=css-cleaner-config --ansi"
        ],
        "test": [
            "@phpunit",
            "@php artisan test"
        ],
        "analyse": [
            "@phpstan analyse"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "platform-check": false
    },
    "suggest": {
        "ext-mbstring": "For better string handling in CSS processing",
        "ext-zip": "For potential future archive features",
        "node": ">=16.0.0 required for PurgeCSS functionality"
    }
}